<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.ninigraph.ninigraph.Activity.PaymentUnsuccessfulActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        android:layout_marginBottom="48dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/img_logo_and_text"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_logo"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#fff"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="28dp"
                        app:contentPadding="4dp">

                        <TextView
                            android:id="@+id/txt_payment_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="پرداخت ناموفق"
                            android:textColor="#ff3f3f"
                            android:textSize="28sp"
                            android:textAlignment="center"/>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:background="#f0f0f0">

                        <TextView
                            android:id="@+id/txt_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textSize="22sp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="تاریخ:"
                            android:textSize="22sp"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp">

                        <TextView
                            android:id="@+id/txt_refId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textSize="22sp"
                            android:textColor="#000"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="شماره پیگیری:"
                            android:textSize="22sp"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:background="#f0f0f0">

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textSize="22sp"
                            android:textColor="#ff4040"/>

                        <TextView
                            android:id="@+id/txt_print"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="مبلغ پرداختی:"
                            android:textSize="22sp"
                            android:textColor="#000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp">

                        <TextView
                            android:id="@+id/txt_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textColor="#000"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/txt_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="بابت:"
                            android:textColor="#000"
                            android:textSize="22sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="0.4"
                            android:background="#c3c3c3"
                            android:layout_margin="8dp"/>


                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/icon_error"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="0.4"
                            android:background="#c3c3c3"
                            android:layout_margin="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/card_prices"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="28dp"
                app:cardUseCompatPadding="true"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:contentPadding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نتیجه پرداخت ناموفق بود، ممکن است به دلیل عدم موجودی کافی یا دلیل دیگری باشد. در صورتی که وجهی از حسابتان کسر شد، بعد از 72 ساعت به حسابتان برمیگردد."
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_btn_back"
        android:text="برگشت"
        android:textColor="#fff"
        android:textSize="28sp"/>

</android.support.constraint.ConstraintLayout>

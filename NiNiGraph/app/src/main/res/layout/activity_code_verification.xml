<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.ninigraph.ninigraph.Activity.CodeVerificationActivity"
    android:background="@mipmap/bg_primary">

    <android.support.v7.widget.CardView
        android:id="@+id/card_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="1dp"
        app:contentPadding="4dp">

        <EditText
            android:id="@+id/edt_txt_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:hint="@string/hint_edt_txt_code"
            android:textSize="32sp"
            android:textStyle="bold"
            android:maxLength="4"
            android:inputType="number"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_enter_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/card_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="64dp"
        android:text="@string/txt_enter_code"
        android:textSize="22sp"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="4dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_verification_caption_part3"
            android:textSize="14sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=' "'
            android:textSize="14sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_verification_caption_part2"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='" '
            android:textSize="14sp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_verification_caption_part1"
            android:textSize="14sp"
            android:textColor="#000"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="98dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp">

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:text="@string/btn_verify"
            android:textSize="34sp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/txt_btn_edit_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_edit_phone_number"
            android:textSize="16sp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:background="#000"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_seconds"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginRight="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_send_code_again"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

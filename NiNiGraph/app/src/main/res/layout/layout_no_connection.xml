<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img_wifi1"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_wifi2"/>

    <ImageView
        android:id="@+id/wifi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:src="@drawable/img_wifi3"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/wifi"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/no_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="16dp"
        android:text="عدم ارتباط با اینترنت"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="#000" />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/no_connection"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:padding="8dp"
        android:background="@drawable/bg_btn_try_again"
        android:text="تلاش مجدد"
        android:textSize="24sp"
        android:textColor="#fff"
        android:clickable="true"/>

    <LinearLayout
        android:id="@+id/lay_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btn_try_again"
        android:layout_margin="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ارتباط با پشتیبانی"
            android:textSize="18sp"
            android:textColor="#000"/>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_support2"
            android:layout_margin="8dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>